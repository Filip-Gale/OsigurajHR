<script>
function izracunajTrogir() {
    const kw = parseFloat(document.getElementById('kw-input-trogir').value) || 0;
    const fiksniTroskovi = 101.20; 
    const varijabilniDio = kw * 0.185; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-trogir');
    document.getElementById('cifra-trogir').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

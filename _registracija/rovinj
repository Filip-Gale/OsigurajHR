<script>
function izracunajRovinj() {
    const kw = parseFloat(document.getElementById('kw-input-rovinj').value) || 0;
    const fiksniTroskovi = 100.60; 
    const varijabilniDio = kw * 0.175; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-rovinj');
    document.getElementById('cifra-rovinj').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

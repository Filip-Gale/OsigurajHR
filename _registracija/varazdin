<script>
function izracunajVarazdin() {
    const kw = parseFloat(document.getElementById('kw-input-varazdin').value) || 0;
    const fiksniTroskovi = 101.50; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    const prikaz = document.getElementById('rezultat-varazdin');
    document.getElementById('cifra-varazdin').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";
    setTimeout(() => { prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' }); }, 100);
}
</script>

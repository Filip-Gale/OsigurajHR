<script>
function izracunajNG() {
    const kw = parseFloat(document.getElementById('kw-input-ng').value) || 0;
    const fiksniTroskovi = 100.85; 
    const varijabilniDio = kw * 0.185; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-ng');
    document.getElementById('cifra-ng').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

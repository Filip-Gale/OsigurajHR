<script>
function izracunajZapresic() {
    const kw = parseFloat(document.getElementById('kw-input-zapresic').value) || 0;
    const fiksniTroskovi = 101.10; 
    const varijabilniDio = kw * 0.165; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-zapresic');
    document.getElementById('cifra-zapresic').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajZadar() {
    const kw = parseFloat(document.getElementById('kw-input-zadar').value) || 0;
    const fiksniTroskovi = 103.20; 
    const varijabilniDio = kw * 0.21; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-zadar');
    document.getElementById('cifra-zadar').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

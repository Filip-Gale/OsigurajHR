<script>
function izracunajKZ() {
    const kw = parseFloat(document.getElementById('kw-input-kz').value) || 0;
    const fiksniTroskovi = 100.40; 
    const varijabilniDio = kw * 0.17; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-kz');
    document.getElementById('cifra-kz').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

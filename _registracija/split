<script>
function izracunajSplit() {
    const kw = parseFloat(document.getElementById('kw-input-split').value) || 0;
    const fiksniTroskovi = 102.50; 
    const varijabilniDio = kw * 0.20; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-split');
    document.getElementById('cifra-split').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

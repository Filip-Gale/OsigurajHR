<script>
function izracunajMET() {
    const kw = parseFloat(document.getElementById('kw-input-met').value) || 0;
    const fiksniTroskovi = 102.10; 
    const varijabilniDio = kw * 0.20; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-met');
    document.getElementById('cifra-met').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

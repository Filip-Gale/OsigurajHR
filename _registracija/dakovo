<script>
function izracunajDakovo() {
    const kw = parseFloat(document.getElementById('kw-input-dakovo').value) || 0;
    const fiksniTroskovi = 100.80; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-dakovo');
    document.getElementById('cifra-dakovo').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

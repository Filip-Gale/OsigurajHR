<script>
function izracunajDA() {
    const kw = parseFloat(document.getElementById('kw-input-da').value) || 0;
    const fiksniTroskovi = 100.25; 
    const varijabilniDio = kw * 0.175; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-da');
    document.getElementById('cifra-da').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

function izracunajGorica() {
    const kw = parseFloat(document.getElementById('kw-input-gorica').value) || 0;
    // Standardne tarife za 2026. (Fiksni troÅ¡kovi + porez na cestovna motorna vozila procjena)
    const fiksniTroskovi = 105.00; 
    const varijabilniDio = kw * 0.22; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-gorica');
    document.getElementById('cifra-gorica').innerText = ukupno.toFixed(2) + " â‚¬";
    prikas.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}

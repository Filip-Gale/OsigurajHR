<script>
function izracunajOsijek() {
    const kw = parseFloat(document.getElementById('kw-input-osijek').value) || 0;
    const fiksniTroskovi = 101.90; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-osijek');
    document.getElementById('cifra-osijek').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

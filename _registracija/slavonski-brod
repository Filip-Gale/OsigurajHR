<script>
function izracunajSB() {
    const kw = parseFloat(document.getElementById('kw-input-sb').value) || 0;
    const fiksniTroskovi = 101.20; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    const prikaz = document.getElementById('rezultat-sb');
    document.getElementById('cifra-sb').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";
    setTimeout(() => { prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' }); }, 100);
}
</script>

<script>
function izracunajKT() {
    const kw = parseFloat(document.getElementById('kw-input-kt').value) || 0;
    const fiksniTroskovi = 100.95; 
    const varijabilniDio = kw * 0.175; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-kt');
    document.getElementById('cifra-kt').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

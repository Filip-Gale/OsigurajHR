<script>
function izracunajMakarska() {
    const kw = parseFloat(document.getElementById('kw-input-makarska').value) || 0;
    const fiksniTroskovi = 102.50; 
    const varijabilniDio = kw * 0.20; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-makarska');
    document.getElementById('cifra-makarska').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

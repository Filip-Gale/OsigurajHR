<script>
function izracunajDubrovnik() {
    const kw = parseFloat(document.getElementById('kw-input-dubrovnik').value) || 0;
    const fiksniTroskovi = 104.50; 
    const varijabilniDio = kw * 0.22; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-dubrovnik');
    document.getElementById('cifra-dubrovnik').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajNA() {
    const kw = parseFloat(document.getElementById('kw-input-na').value) || 0;
    const fiksniTroskovi = 100.70; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-na');
    document.getElementById('cifra-na').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

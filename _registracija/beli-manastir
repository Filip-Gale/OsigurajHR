<script>
function izracunajBM() {
    const kw = parseFloat(document.getElementById('kw-input-beli-manastir').value) || 0;
    const fiksniTroskovi = 100.10; 
    const varijabilniDio = kw * 0.17; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-beli-manastir');
    document.getElementById('cifra-beli-manastir').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

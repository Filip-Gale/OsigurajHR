<script>
function izracunajKarlovac() {
    const kw = parseFloat(document.getElementById('kw-input-karlovac').value) || 0;
    const fiksniTroskovi = 101.80; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-karlovac');
    document.getElementById('cifra-karlovac').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajVB() {
    const kw = parseFloat(document.getElementById('kw-input-vb').value) || 0;
    const fiksniTroskovi = 100.20; 
    const varijabilniDio = kw * 0.165; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-vb');
    document.getElementById('cifra-vb').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

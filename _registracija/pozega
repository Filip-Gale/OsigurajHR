<script>
function izracunajPZ() {
    const kw = parseFloat(document.getElementById('kw-input-pz').value) || 0;
    const fiksniTroskovi = 100.90; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-pz');
    document.getElementById('cifra-pz').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajKrk() {
    const kw = parseFloat(document.getElementById('kw-input-krk').value) || 0;
    const fiksniTroskovi = 101.80; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-krk');
    document.getElementById('cifra-krk').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

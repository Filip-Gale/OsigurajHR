<script>
function izracunajVK() {
    const kw = parseFloat(document.getElementById('kw-input-vk').value) || 0;
    const fiksniTroskovi = 101.30; 
    const varijabilniDio = kw * 0.18; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-vk');
    document.getElementById('cifra-vk').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

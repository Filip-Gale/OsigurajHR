<script>
function izracunajKastela() {
    const kw = parseFloat(document.getElementById('kw-input-kastela').value) || 0;
    const fiksniTroskovi = 101.40; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-kastela');
    document.getElementById('cifra-kastela').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

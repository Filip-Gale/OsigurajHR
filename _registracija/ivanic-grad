<script>
function izracunajIG() {
    const kw = parseFloat(document.getElementById('kw-input-ig').value) || 0;
    const fiksniTroskovi = 100.40; 
    const varijabilniDio = kw * 0.172; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-ig');
    document.getElementById('cifra-ig').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

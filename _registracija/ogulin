<script>
function izracunajOG() {
    const kw = parseFloat(document.getElementById('kw-input-og').value) || 0;
    const fiksniTroskovi = 100.60; 
    const varijabilniDio = kw * 0.17; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-og');
    document.getElementById('cifra-og').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

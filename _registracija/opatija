<script>
function izracunajOpatija() {
    const kw = parseFloat(document.getElementById('kw-input-opatija').value) || 0;
    const fiksniTroskovi = 101.20; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-opatija');
    document.getElementById('cifra-opatija').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

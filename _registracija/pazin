<script>
function izracunajPA() {
    const kw = parseFloat(document.getElementById('kw-input-pa').value) || 0;
    const fiksniTroskovi = 101.50; 
    const varijabilniDio = kw * 0.19; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-pa');
    document.getElementById('cifra-pa').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajGS() {
    const kw = parseFloat(document.getElementById('kw-input-gs').value) || 0;
    const fiksniTroskovi = 100.80; 
    const varijabilniDio = kw * 0.17; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-gs');
    document.getElementById('cifra-gs').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

<script>
function izracunajZC() {
    const kw = parseFloat(document.getElementById('kw-input-zc').value) || 0;
    const fiksniTroskovi = 100.10; 
    const varijabilniDio = kw * 0.16; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-zc');
    document.getElementById('cifra-zc').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

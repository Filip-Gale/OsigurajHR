<script>
function izracunajZG() {
    const kw = parseFloat(document.getElementById('kw-input').value) || 0;
    
    // Formule za 2026. (Okvirne naknade: tehniÄki + eko + cestarina + naknade)
    const fiksniTroskovi = 105.50; 
    const varijabilniDio = kw * 0.22; // Cestarina i naknada za okoliÅ¡ ovise o snazi/emisijama
    
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-zg');
    document.getElementById('cifra-zg').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    // Scroll da se odmah vidi rezultat
    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>

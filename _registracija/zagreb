<script>
function izracunajZagreb() {
    const kw = parseFloat(document.getElementById('kw-input-zagreb').value) || 0;
    const fiksniTroskovi = 105.00; 
    const varijabilniDio = kw * 0.22; 
    const ukupno = fiksniTroskovi + varijabilniDio;
    
    const prikaz = document.getElementById('rezultat-zagreb');
    document.getElementById('cifra-zagreb').innerText = ukupno.toFixed(2) + " â‚¬";
    prikaz.style.display = "block";

    setTimeout(() => {
        prikaz.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }, 100);
}
</script>
